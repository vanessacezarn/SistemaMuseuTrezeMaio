<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eglv.sistemagerenciamentoacervos.controller.RevistaExcluirController">
   <children>
      <VBox spacing="12">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <children>
            <HBox spacing="10">
               <children>
                  <Label text="Pesquisar por:" />
                  <ComboBox fx:id="cbOpcaoBusca" prefWidth="150" />
                  <TextField fx:id="txtBusca" promptText="Digite o valor..." />
                  <Button onAction="#buscarLivro" text="Buscar" />
                  <Button onAction="#carregarTabela" text="Recarregar" />
               </children>
            </HBox>
            <TableView fx:id="tblAno" prefHeight="300">
               <columns>
                  <TableColumn fx:id="colCodigo" prefWidth="100" text="Código" />
                  <TableColumn fx:id="colTitulo" prefWidth="200" text="Título" />
                  <TableColumn fx:id="colVolume" prefWidth="134.4000244140625" text="Volume" />
                  <TableColumn fx:id="colAno" prefWidth="77.5999755859375" text="Ano" />
                  <TableColumn fx:id="colMes" prefWidth="81.60009765625" text="Mes" />
                  <TableColumn fx:id="colIdioma" prefWidth="117.5999755859375" text="Idioma" />
               </columns>
            </TableView>
            <HBox spacing="12">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
               <children>
                  <Button onAction="#excluirLivro" style="-fx-font-weight: bold; -fx-text-fill: red;" text="Excluir" />
                  <Button onAction="#sair" text="Fechar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
