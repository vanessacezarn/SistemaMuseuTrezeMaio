<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="596.0" prefWidth="912.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eglv.sistemagerenciamentoacervos.controller.RevistaListarController">

    <children>
        <!-- VBox centralizado dentro do AnchorPane -->
        <VBox layoutX="4.8" layoutY="7.2" prefHeight="586.0" prefWidth="763.0" spacing="10" style="-fx-padding: 20;" AnchorPane.bottomAnchor="7.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="7.0">

            <!-- Título -->
            <Label alignment="CENTER" text="REVISTAS CADASTRADOS NO ACERVO">
                <font><Font name="System Bold" size="24.0" /></font>
            </Label>

            <!-- Linha de filtros -->
            <HBox spacing="10">
                <Label text="Pesquisar por:" />
                <ComboBox fx:id="cmbFiltroCampo" prefWidth="150" />
                <TextField fx:id="txtFiltroValor" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnSair" onAction="#btnSair" text="SAIR" />
            </HBox>

            <!-- Tabela ocupa todo o espaço restante -->
            <TableView fx:id="tblRevistas" prefHeight="463.0" prefWidth="756.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCodigo" prefWidth="130.3999538421631" text="CÓDIGO" />
                    <TableColumn fx:id="colTitulo" prefWidth="126.40003967285156" text="TÍTULO" />
                    <TableColumn fx:id="colAno" prefWidth="92.79998779296875" text="ANO" />
                    <TableColumn fx:id="colAno" prefWidth="100.0" text="MES" />
                    <TableColumn fx:id="colEditora" prefWidth="139.20004272460938" text="EDITORA" />
                    <TableColumn fx:id="colAssuntos" prefWidth="138.400146484375" text="ASSUNTOS" />
                    <TableColumn fx:id="colColaboradores" prefWidth="132.7998046875" text="COLABORADORES" />
                </columns>
            </TableView>

        </VBox>
    </children>
</AnchorPane>
